BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size: 48
            multiline: False
            text: '0'
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_release: app.handle_increment(1)
            Button:
                text: 'Down'
                on_release: app.handle_increment(-1)
#    Button:
#        text: 'Convert m to km'
#        on_release: app.convert_m_to_km()
    Label:
        id: 'output_km'
        text: app.output_text
